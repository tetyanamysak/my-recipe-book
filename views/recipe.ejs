<!DOCTYPE html>
<html lang="en">
  <%- include("partials/header.ejs") %>

  <main>
    <div class="recipe-detail">
      <div class="recipe-body">
        <h1><%= recipe.name %></h1>

        <div class="section-title">Ingredients</div>
        <p><%= recipe.ingredients %></p>

        <div class="section-title">Process</div>
        <p><%= recipe.instructions %></p>
      </div>

      <div class="recipe-footer">
        <a href="/" class="back-link">‚Üê Go back to the recipe list</a>
        <button class="btn-delete" onclick="toggleModal(true)">
          Delete Recipe
        </button>
      </div>
    </div>
  </main>

  <div id="deleteModal" class="modal-overlay" style="display: none">
    <div class="modal-content">
      <p>
        Do you really want to delete this recipe? This action cannot be undone.
      </p>

      <div class="modal-actions">
        <form action="/delete-recipe/<%= recipe.id %>" method="POST">
          <button type="submit" class="btn-confirm-delete">
            Yes, delete it!
          </button>
        </form>
        <button class="btn-cancel" onclick="toggleModal(false)">
          Back to recipe
        </button>
      </div>
    </div>
  </div>

  <%- include("partials/footer.ejs") %>
</html>
